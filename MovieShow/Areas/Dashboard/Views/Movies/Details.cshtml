@model Movie
@section Header {
   Movie Details
}
<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Details for @Model.MovieId</h3>
        </div>
        <ul>
            <li>Descrption:@Html.Raw(@Model.Description)</li>
            <li>Status:@(Model.IsDeleted ? "Deleted" : "Active")</li>
            <li>CreatedAt:@Model.ReleaseDate</li>
            <img src="@Model.Img" with="100px;" />


        </ul>
    </div>



</div>


